
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="1" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">
        <TextView
            android:id="@+id/priceTextView"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="Rp. 234.000.00"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:paddingVertical="3dp"/>
        <TextView
            android:id="@+id/soldTextView"
            android:layout_width="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="543 Terjual"
            android:textSize="10sp"
            android:textColor="#9822AC"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/productTextView"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/priceTextView"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Product : "
            android:textSize="13sp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:background="#9B24AF"
            android:textColor="@color/white"
            android:padding="3dp"/>
        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/productTextView"
            app:layout_constraintTop_toTopOf="@+id/productTextView"
            android:text="Product"
            android:textSize="13sp"
            android:layout_height="wrap_content"
            android:padding="3dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>


